<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewRProposta"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/viewBlue"
                android:text="Nome Proposta"
                android:textAllCaps="true"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewRLuogo"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:layout_below="@+id/textViewRProposta"
                android:layout_marginBottom="16dp"
                android:textSize="15sp"
                android:text="Luogo" />

            <TextView
                android:id="@+id/textViewRData"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:textSize="15sp"
                android:layout_below="@+id/textViewRLuogo"
                android:layout_marginBottom="16dp"
                android:text="Data" />

            <TextView
                android:id="@+id/textViewROra"
                android:layout_width="167dp"
                android:layout_height="35dp"
                android:textSize="15sp"
                android:layout_below="@+id/textViewRData"
                android:layout_marginBottom="16dp"
                android:text="Ora" />

            <Button
                android:id="@+id/accettaProposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewROra"
                android:layout_marginBottom="16dp"
                android:drawableRight="@drawable/ic_check"
                android:drawableTint="@color/green"
                android:text="Accetta" />

            <Button
                android:id="@+id/rifiutaProposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewROra"
                android:layout_marginLeft="28dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/accettaProposta"
                android:text="Rifiuta"
                android:drawableRight="@drawable/ic_deny"
                android:drawableTint="@color/lighRed"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/accettaProposta" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>