<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewRProposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"
                android:text="Nome Proposta"
                android:textAllCaps="true"
                android:textColor="@color/defaultBlue"
                android:textSize="30sp"
                android:textStyle="bold"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewRData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewRProposta"
                android:layout_marginBottom="16dp"
                android:text="Data: "
                android:textSize="17sp"
                android:textColor="@color/defaultBlue"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewRDataValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewRData"
                android:layout_toEndOf="@id/textViewRData"
                android:layout_below="@id/textViewRProposta"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewROra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewRData"
                android:layout_marginBottom="16dp"
                android:text="Orario: "
                android:textSize="17sp"
                android:textColor="@color/defaultBlue"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewROraValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewROra"
                android:layout_toEndOf="@id/textViewROra"
                android:layout_below="@id/textViewRData"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewOrganizator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewROra"
                android:layout_marginBottom="16dp"
                android:text="Organizzatore: "
                android:textSize="17sp"
                android:textColor="@color/defaultBlue"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewROrganizatorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewOrganizator"
                android:layout_toEndOf="@id/textViewOrganizator"
                android:layout_below="@id/textViewROra"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewRLuogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewOrganizator"
                android:layout_marginBottom="16dp"
                android:text="Luogo: "
                android:textColor="@color/defaultBlue"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewRLuogoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewRLuogo"
                android:layout_toEndOf="@id/textViewRLuogo"
                android:layout_below="@id/textViewOrganizator"
                android:layout_marginBottom="16dp"
                android:textSize="17sp"
                android:text="TextView" />

            <Button
                android:id="@+id/refuseProposal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewRLuogoValue"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_toEndOf="@+id/acceptProposal"
                android:layout_toRightOf="@+id/acceptProposal"
                android:drawableRight="@drawable/ic_deny"
                android:drawableTint="@color/lighRed"
                android:text="@string/refuses"/>

            <Button
                android:id="@+id/acceptProposal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRLuogoValue"
                android:drawableRight="@drawable/ic_check"
                android:drawableTint="@color/green"
                android:text="@string/accept" />

            <Button
                android:id="@+id/entryChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/acceptProposal"
                android:text="@string/enter_chat"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableRight="@drawable/ic_row_message"
                android:drawableTint="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>