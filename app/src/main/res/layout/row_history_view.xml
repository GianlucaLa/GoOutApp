<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/historyCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewHProposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:text="Nome Proposta"
                android:paddingRight="5dp"
                android:textColor="@color/colorSecondary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewHData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHProposta"
                android:layout_marginBottom="8dp"
                android:text="Data: "
                android:textSize="17sp"
                android:textColor="@color/colorSecondary"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewHDataValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewHData"
                android:layout_toEndOf="@id/textViewHData"
                android:layout_below="@id/textViewHProposta"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewHOra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHData"
                android:layout_marginBottom="8dp"
                android:text="Orario: "
                android:textSize="17sp"
                android:textColor="@color/colorSecondary"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewHOraValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/textViewHOra"
                android:layout_toEndOf="@id/textViewHOra"
                android:layout_below="@id/textViewHData"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewHGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHOra"
                android:layout_marginBottom="8dp"
                android:text="Nome Gruppo: "
                android:textSize="17sp"
                android:textColor="@color/colorSecondary"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewHGroupNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/textViewHGroupName"
                android:layout_toEndOf="@id/textViewHGroupName"
                android:layout_below="@id/textViewHOraValue"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewHorganizator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHGroupName"
                android:layout_marginBottom="8dp"
                android:text="Organizzatore: "
                android:textSize="17sp"
                android:textColor="@color/colorSecondary"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textViewHOrganizatorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewHorganizator"
                android:layout_toEndOf="@id/textViewHorganizator"
                android:layout_below="@id/textViewHGroupNameValue"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewHLuogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHorganizator"
                android:layout_marginBottom="8dp"
                android:text="Luogo: "
                android:textColor="@color/colorSecondary"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewHLuogoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewHLuogo"
                android:layout_toEndOf="@id/textViewHLuogo"
                android:layout_below="@id/textViewHorganizator"
                android:layout_marginBottom="8dp"
                android:textSize="17sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewHStatoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="TextView"
                android:textColor="@color/colorPrimaryVariant"
                android:padding="2dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/entryChatHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textViewHLuogoValue"
                android:text="@string/enter_chat"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableRight="@drawable/ic_row_message"
                android:drawableTint="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>