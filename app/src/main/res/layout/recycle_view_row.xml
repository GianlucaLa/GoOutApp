<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <TextView
        android:id="@+id/textViewDrawable"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/blue_circle_textview"
        android:gravity="center"
        android:text="A"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textViewNomeGruppo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/textViewDrawable"
        android:layout_toRightOf="@+id/textViewDrawable"
        android:text="TextView"
        android:maxWidth="160dp"
        android:lines="1"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAdminFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gold"
        android:layout_toEndOf="@+id/textViewNomeGruppo"
        android:layout_toRightOf="@+id/textViewNomeGruppo"
        android:text=""
        android:textSize="21sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvEmailDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNomeGruppo"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toEndOf="@+id/textViewDrawable"
        android:layout_toRightOf="@+id/textViewDrawable"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="This is a very long text, prova 12345679123456 "
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewOrario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="12:46" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBaseline="@id/tvEmailDetails"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/red_circle_text_view"
        android:gravity="center"
        android:text="1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

</RelativeLayout>