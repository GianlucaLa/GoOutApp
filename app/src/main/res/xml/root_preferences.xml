<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/profile">

        <EditTextPreference
            app:key="name"
            app:title="@string/name"
            app:selectable="false"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="surname"
            app:title="@string/surname"
            app:selectable="false"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="email"
            app:title="@string/email_address"
            android:selectable="false"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="nickname"
            app:title="@string/Nickname"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="password"
            app:singleLine="true"
            app:title="@string/password"
            app:enabled="true"
            app:positiveButtonText="@string/confirm"
            app:negativeButtonText="@string/cancel"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/options">

        <ListPreference
            app:defaultValue="mettere lingua dispositivo"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>